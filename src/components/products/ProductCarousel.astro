---
export interface Props {
  images: string[];
  title: string;
  className?: string;
}

const { images, title, className = "" } = Astro.props;
---

<div class={`product-carousel ${className}`}>
  <img src={images[0]} alt={`${title} - Vista previa`} class="w-full h-full object-cover" />
</div>

<style>
  .product-carousel {
    width: 100%;
    height: 100%;
    border-radius: 0.75rem;
    overflow: hidden;
  }
</style>

